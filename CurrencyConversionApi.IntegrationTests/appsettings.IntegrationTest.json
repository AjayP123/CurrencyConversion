{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Warning",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "CurrencyConversionApi": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console",
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ]
  },
  "ExchangeRates": {
    "ActiveProvider": "Mock",
    "CacheDuration": "00:00:30",
    "RequestTimeout": "00:00:10",
    "MaxRetryAttempts": 1,
    "Providers": {
      "Mock": {
        "BaseUrl": "http://localhost:9999",
        "ApiKey": "",
        "RateLimitPerMinute": 1000,
        "Enabled": true,
        "Priority": 1
      },
      "Frankfurter": {
        "BaseUrl": "https://api.frankfurter.app/",
        "ApiKey": "",
        "RateLimitPerMinute": 100,
        "Enabled": false,
        "Priority": 2
      }
    }
  },
  "SmartCache": {
    "CETTimeZone": "Central European Standard Time",
    "FrankfurterUpdateHour": 16,
    "UpdateBuffer": "00:05:00",
    "BusinessHoursTTL": "00:01:00",
    "OffHoursTTL": "00:02:00",
    "BusinessHoursStart": 8,
    "BusinessHoursEnd": 20
  },
  "Jwt": {
    "SecretKey": "integration-test-secret-key-for-jwt-testing-purposes-minimum-256-bits-required",
    "Issuer": "IntegrationTestIssuer",
    "Audience": "IntegrationTestAudience",
    "ExpirationMinutes": 60,
    "RefreshTokenExpirationDays": 1
  },
  "AllowedHosts": "*"
}
