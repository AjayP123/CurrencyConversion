{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Warning",
      "Override": {
        "Microsoft": "Error",
        "System": "Error",
        "CurrencyConversionApi": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[PROD] {Timestamp:yyyy-MM-dd HH:mm:ss.fff} [{Level:u3}] {CorrelationId} {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "/var/log/currency-api/currency-api-prod-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff} [{Level:u3}] {CorrelationId} {Message:lj}{NewLine}{Exception}"
        }
      }
    ]
  },
  "ExchangeRates": {
    "ActiveProvider": "Frankfurter",
    "CacheDuration": "00:15:00",
    "RequestTimeout": "00:00:10",
    "MaxRetryAttempts": 3,
    "Providers": {
      "Frankfurter": {
        "BaseUrl": "https://api.frankfurter.app/",
        "Enabled": true,
        "Priority": 1,
        "RateLimitPerMinute": 1000
      },
      "ExchangeRateAPI": {
        "BaseUrl": "https://api.exchangerate-api.com/v4/",
        "Enabled": true,
        "Priority": 2,
        "RateLimitPerMinute": 1500
      },
      "CurrencyAPI": {
        "BaseUrl": "https://api.currencyapi.com/v3/",
        "Enabled": true,
        "Priority": 3,
        "RateLimitPerMinute": 300
      }
    }
  },
  "SmartCache": {
    "CETTimeZone": "Central European Standard Time",
    "FrankfurterUpdateHour": 16,
    "UpdateBuffer": "00:05:00",
    "BusinessHoursTTL": "00:15:00",
    "OffHoursTTL": "02:00:00",
    "BusinessHoursStart": 8,
    "BusinessHoursEnd": 20
  },
  "Jwt": {
    "Issuer": "CurrencyConversionApi-Prod",
    "Audience": "CurrencyConversionApi-Prod",
    "ExpirationMinutes": 60,
    "RefreshTokenExpirationDays": 7
  },
  "AllowedHosts": "yourdomain.com;*.yourdomain.com",
  "Environment": "Production",
  "HealthChecks": {
    "Enabled": true,
    "DetailedErrors": false
  }
}
