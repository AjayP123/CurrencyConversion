{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[STAGING] {Timestamp:HH:mm:ss} [{Level:u3}] {CorrelationId} {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/currency-api-staging-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 14
        }
      }
    ]
  },
  "ExchangeRates": {
    "ActiveProvider": "Frankfurter",
    "CacheDuration": "00:15:00",
    "RequestTimeout": "00:00:15",
    "MaxRetryAttempts": 3,
    "Providers": {
      "Frankfurter": {
        "BaseUrl": "https://api.frankfurter.app/",
        "Enabled": true,
        "Priority": 1
      },
      "ExchangeRateAPI": {
        "BaseUrl": "https://api.exchangerate-api.com/v4/",
        "Enabled": true,
        "Priority": 2
      },
      "CurrencyAPI": {
        "BaseUrl": "https://api.currencyapi.com/v3/",
        "Enabled": true,
        "Priority": 3
      }
    }
  },
  "SmartCache": {
    "CETTimeZone": "Central European Standard Time",
    "FrankfurterUpdateHour": 16,
    "UpdateBuffer": "00:05:00",
    "BusinessHoursTTL": "00:15:00",
    "OffHoursTTL": "01:30:00",
    "BusinessHoursStart": 8,
    "BusinessHoursEnd": 20
  },
  "Jwt": {
    "Issuer": "CurrencyConversionApi-Staging",
    "Audience": "CurrencyConversionApi-Staging",
    "ExpirationMinutes": 60,
    "RefreshTokenExpirationDays": 7
  },
  "Environment": "Staging"
}
